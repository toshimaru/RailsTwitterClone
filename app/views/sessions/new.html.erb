<% provide(:title, "Sign in") %>

<div class="text-center">
  <div class="form-signin">
    <%# <img class="mb-4" src="/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> %>
    <h1 class="h4 mb-3 fw-normal">Sign in to Twitter Clone</h1>

    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="form-floating">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email', autofocus: true  %>
        <%= f.label :email%>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        <%= f.label :password %>
      </div>
      <div class="checkbox mb-3">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>Remember me</span>
        <% end %>
      </div>
      <%= f.submit "Sign in", class: "w-100 btn btn-lg btn-primary" %>
    <% end %>

    <div class="mt-5">
      <p>New user? <%= link_to "Sign up", signup_path %></p>
    </div>
  </div>
</div>
