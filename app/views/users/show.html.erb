<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
    <strong>Email:</strong> <%= @user.email %>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>

    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
      <p>No post yet</p>
    <% end %>
  </div>
</div>
